$primary-color = #409EFF;
$primary-background-color = #d8e8fa;

.widget-form-wrapper {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;

  .widget-form-container {
    position: relative;
    width: 375px;
    min-height: 640px;
    margin: 20px auto;
    -webkit-box-shadow: 0 2px 5px 1px hsla(0, 0%, 48.6%, 0.2);
    box-shadow: 0 2px 5px 1px hsla(0, 0%, 48.6%, 0.2);
    background-color: #fff;
    background-repeat: no-repeat;
    background-position: 0 0;
    background-size: 100% 100%;

    img {
      vertical-align: top;
    }

    .widget-empty {
      background-image: url('../assets/img/form_empty.png');
      background-repeat: no-repeat;
      background-position: 50%;
      background-size: 66%;
    }
  }

  .widget-form-list {
    min-height: 360px;
    padding-bottom: 36px;

    .ghost {
      background: #fff;
      border: 1px dashed $primary-color;

      &::after {
        background: #fff;
      }
    }

    li.ghost {
      position: relative;
      line-height: 30px;
      list-style: none;
      font-size: 0;

      &::after {
        content: '放到这里';
        display: block;
        background: #fff;
        position: absolute;
        left: 50%;
        margin-left: -32px;
        top: 0;
        font-size: 16px;
        color: #999;
        z-index: 10;
      }
    }

    .el-icon-rank {
      position: absolute;
      left: -28px;
      top: 15px;
      font-size: 24px;
      padding: 2px;
      background-color: #409eff;
      color: #fff;
      z-index: 1001;
      cursor: move;
    }
  }

  .widget-action-btn {
    position: absolute;
    bottom: -10px;
    color: #fff;
    z-index: 1199;
    padding: 5px;
    font-size: 14px;
    border-radius: 100%;
    transition: 0.3s;
    cursor: pointer;
  }

  .widget-action-delete {
    background-color: #F56C6C;
    right: 8px;
  }

  .widget-action-clone {
    background-color: #409EFF;
    right: 40px;
  }

  .widget-view {
    margin: 0;
    padding: 0px;
    position: relative;

    &:after {
      content: '';
      position: absolute;
      left: 0;
      right: 0;
      bottom: 0;
      top: 0;
      display: block;
      z-index: 1001;
    }

    input::-webkit-input-placeholder {
      color: #666;
      opacity: 1;
    }

    &:hover {
      box-shadow: 0px 1px 10px 1px #90c7ff inset;
    }

    &.active {
      box-shadow: 0px 1px 10px 1px #90c7ff;
      z-index: 1111;
    }

    .wg-padding {
      padding: 5px 10px;
    }

    .wg-item {
      display: flex;
      line-height: 50px;
    }

    .wg-phone {
      .getVerCode-btn {
        outline: 0;
        font-size: 12px;
        height: 36px;
        min-width: 100px;
        margin-top: 5px;
        margin-left: 10px;
        cursor: pointer;
        border: 1px solid transparent;
      }
    }

    .wg-staticText {
      line-height: 1.6;
      background-repeat: no-repeat;
      background-size: 100% 100%;
      background-position: 0 0;
    }

    .wg-input, .wg-select {
      width: 100%;
      height: 40px;
      margin: 5px 0;
      color: #666;
      font-size: 14px;
      border-radius: 4px;
      border: 1px solid #ddd;
      outline: none;
      text-indent: 10px;
      // background: #fff;
      transition: 0.3s;
    }

    .wg-title {
      font-size: 14px;
      margin-right: 10px;
      color: #333;
    }

    .wg-checkbox {
      .label {
        float: left;
        cursor: pointer;
        position: relative;
        margin-right: 10px;
      }

      .label > span {
        background: #fff;
        padding: 8px 15px;
        border-radius: 10px;
        border: 1px solid #ddd;
      }

      .wg-checkbox-input:checked + span {
        background-color: $primary-color;
        border-color: $primary-color;
        color: #fff;
      }
    }

    .wg-switch {
      .label {
        display: flex;
        cursor: pointer;
      }

      .wg-switch-core {
        display: inline-block;
        position: relative;
        margin: 0;
        width: 40px;
        height: 20px;
        border: 1px solid #dcdfe6;
        outline: 0;
        border-radius: 10px;
        box-sizing: border-box;
        background: #dcdfe6;
        transition: border-color 0.3s, background-color 0.3s;
      }

      .wg-switch-core:after {
        content: '';
        position: absolute;
        top: 1px;
        left: 1px;
        border-radius: 100%;
        transition: all 0.3s;
        width: 16px;
        height: 16px;
        background-color: #fff;
      }

      .wg-switch-input:checked + span {
        background-color: $primary-color;
        border-color: $primary-color;
        color: #fff;
      }

      .wg-switch-input:checked + span::after {
        left: 100%;
        margin-left: -17px;
      }
    }

    .wg-button {
      width: 100%;
      padding: 0;
      color: #fff;
      height: 46px;
      line-height: 46px;
      font-size: 18px;
      outline: none;
      border: none;
      letter-spacing: 2px;
      border-radius: 20px;
      text-align: center;
    }

    .wg-horizontal-picker {
      border: 1px solid #999;
      border-radius: 20px;
      overflow: hidden;
      white-space: nowrap;
      height: 36px;
      line-height: 36px;
      margin: 0;
      padding: 0;

      .picker-item {
        height: 100%;
        text-align: center;
        display: inline-block;
        white-space: nowrap;
        position: relative;
        overflow: hidden;
        text-overflow: ellipsis;
        color: #707274;
        box-sizing: border-box;
        backface-visibility: hidden;
      }
    }

    .wg-imgshow {
      .img-placeholder {
        background: #f1f1f1;
      }
    }

    .wg-imgslide {
      text-align: center;

      .el-carousel__container {
        height: 100%;
      }

      .el-carousel__item {
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .el-carousel__item:nth-child(2n) {
        background-color: #99a9bf;
      }

      .el-carousel__item:nth-child(2n+1) {
        background-color: #d3dce6;
      }
    }

    .wg-splitLine .splitLine-hr {
      border: 0 none;
      border-top: 1px solid #d3d3d3;
    }
  }

  .wg-formlist {
    transition: 0.2s;
    padding: 10px;
  }

  .wg-fixed-bottom {
    border: 1px dashed #ccc;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;

    .widget-form-list {
      min-height: 36px;
    }

    .el-icon-rank {
      top: 0px;
      cursor: no-drop;
    }

    .widget-list-wrapper {
      height: 36px;
      overflow: hidden;
    }

    .widget-empty {
      position: relative;
      background-image: none;

      &:after {
        content: '底部悬浮区';
        color: #999;
        font-size: 12px;
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
      }
    }
  }
}